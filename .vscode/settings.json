// Those commented settings are just for references.
// Don't uncomment them in this git-tracked settings.json file.
// You may enable those settings for your local device globally.
{
  "files.encoding": "utf8",
  "files.eol": "\n",
  "editor.tabSize": 2,
  "editor.rulers": [80],

  // Format on save (require recommended extensions).
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": { "source.organizeImports": "always" },
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // File nesting patterns (enable as you wish).
  // "explorer.fileNesting.enabled": true,
  // "explorer.fileNesting.expand": false,
  "explorer.fileNesting.patterns": {
    "*": "${capture}.map",
    "*.js": "${capture}.d.ts",
    "*.ts": "${capture}.test.ts",
    "*.tsx": "${capture}.stories.tsx, ${capture}.module.scss",
    "*.module.scss": "${capture}.stories.tsx",
    "tsconfig.json": "tsconfig.tsbuildinfo",
    "next.config.ts": "next-env.d.ts,next-css.d.ts",
    "vitest.config.ts": "vitest.shims.d.ts",
    "package.json": "pnpm-lock.yaml",
    "readme.md": "license, claude.md, qwen.md"
  },

  // Specify the TypeScript SDK to enable css module plugin.
  "typescript.tsdk": "node_modules/typescript/lib",

  // Translation files directory (require recommended extensions).
  // "i18n-ally.displayLanguage": "xx",
  "i18n-ally.sourceLanguage": "en",
  "i18n-ally.localesPaths": ["src/locales"],
  "json.schemas": [
    { "fileMatch": ["src/locales/*.json"], "url": "./src/lang.schema.json" }
  ],

  // Output bundle visualizations.
  "files.associations": { "*.map": "json" },
  "editor.wordWrapColumn": 80,
  "[javascript]": { "editor.wordWrap": "wordWrapColumn" },
  "[css]": { "editor.wordWrap": "wordWrapColumn" },
  "[json]": { "editor.wordWrap": "wordWrapColumn" },

  // Code spell checker (require recommended extensions).
  "cSpell.ignorePaths": ["node_modules", "out", "pnpm-lock.yaml"],
  "cSpell.words": [
    "autodocs",
    "consola",
    "dotenv",
    "esbenp",
    "esbuild",
    "healthcheck",
    "isready",
    "lokalise",
    "oxlint",
    "qwen",
    "vercel",
    "vitest"
  ]
}
