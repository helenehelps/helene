{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "plugins": [
      // Dev runtime live css-module declaration support.
      { "name": "typescript-plugin-css-modules" },
      { "name": "next" }
    ],

    // Aliases must be unique, or generated declare might fail.
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] }
  },
  "include": [
    // Load generated css-module declaration first to override next default.
    "next-css.d.ts",
    "next-env.d.ts",
    ".next/types/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
